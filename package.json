{
  "name": "watchtower",
  "private": true,
  "version": "1.4.0",
  "packageManager": "pnpm@10.26.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "format": "biome check --write",
    "format:f": "biome check --write --unsafe",
    "type-check": "tsc --noEmit",
    "clippy": "cd src-tauri && cargo clippy",
    "prepare": "husky",
    "version:patch": "node scripts/bump-version.mjs patch",
    "version:minor": "node scripts/bump-version.mjs minor",
    "version:major": "node scripts/bump-version.mjs major"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-router": "^1.158.1",
    "@tanstack/react-router-devtools": "^1.158.1",
    "@tanstack/react-virtual": "^3.13.18",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-fs": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.563.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@tanstack/router-plugin": "^1.158.1",
    "@tauri-apps/cli": "^2",
    "@types/node": "^25.2.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "clsx": "^2.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "~5.8.3",
    "vite": "^7.3.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome check --write"
    ]
  }
}
