{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "watchtower",
  "version": "1.4.1",
  "identifier": "com.lurain.watchtower",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Watchtower",
        "width": 1200,
        "height": 800,
        "maximized": true,
        "decorations": false,
        "transparent": true,
        "center": true,
        "windowEffects": {
          "effects": [
            "acrylic"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzQzYwMjMwNzk3RjZFRUEKUldUcWJuOTVNQUxHMHdvRGJTdFI5d3VNUmJ6TWZ3QnVtODNEb3dSTGE4dmNXWi85L3BwRGRiaEIK",
      "endpoints": [
        "https://github.com/GrangbelrLurain/watchtower/releases/latest/download/latest.json"
      ]
    }
  }
}
